<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bt_selector"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">


    <ImageView
        android:id="@+id/item_event_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <org.kymjs.kjframe.widget.RoundImageView
            android:id="@+id/item_event_portrait"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="云墨环绕--青城山"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:padding="2dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/event_know_person" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_event_people"
                    android:text="4人参加"
                    android:textSize="11sp" />

                <ImageView
                    android:padding="2dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/event_know_competitive" />

                <TextView
                    android:id="@+id/item_event_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3家商家竞标"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/item_event_time"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="2015.5.5" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>